.side-bar
  .user-name
    .contents
      .contents_user 
        = current_user.name
      .contents_icon
        = link_to '/groups/new' , class: "contents_icon_btn " do
          = icon('fas', 'edit', class: "contents_icon_btn_icon_edit")
        = link_to edit_user_path(current_user) , class: "contents_icon_btn" do
          = icon('fas', 'cog', class: "contents_icon_btn_icon_cog")

  .groups-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group_name 
            = group.name
          .group_message 
            = group.show_last_message
